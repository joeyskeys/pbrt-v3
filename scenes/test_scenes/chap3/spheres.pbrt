LookAt 20 40 80
       0 0 0
       0 1 0
Camera "perspective" "float fov" 45

Sampler "halton" "integer pixelsamples" 8
Integrator "path"
Film "image" "string filename" "cornell_box.png"
     "integer xresolution" [480] "integer yresolution" [360]

TransformTimes 0 2

WorldBegin

LightSource "infinite" "rgb L" [0.3 0.3 0.3]

LightSource "distant" "point from" [-10 20 40]
    "blackbody L" [3000 1.5]

AttributeBegin
    Material "disney" "rgb color" [0.6 0.6 0.6]
    Translate 0 -500 0
    Shape "sphere" "float radius" 500
AttributeEnd

AttributeBegin
    Material "disney" "rgb color" [0.8 0.2 0.2]
    Translate 0 10 0
    Scale 1 0.3 1
    Shape "sphere" "float radius" 10
AttributeEnd

AttributeBegin
    Material "disney" "rgb color" [0.2 0.7 0.2]
    Translate 20 10 0
    ActiveTransform StartTime
    Rotate 90 0 1 0
    ActiveTransform EndTime
    Rotate 120 0 1 0
    ActiveTransform All
    Shape "paraboloid" "float radius" [10] "float zmax" [20]
AttributeEnd

WorldEnd
